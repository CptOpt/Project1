<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/register_frag"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:backgroundTintMode="add">
    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:alpha="0.8"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:longClickable="false"
            android:id="@+id/emailAddress"
            android:background="@drawable/edittxtstyles"
            android:hint="Email Address"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:layout_above="@+id/password1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/password1"
            android:inputType="textPassword"
            android:longClickable="false"
            android:hint="Password"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:background="@drawable/edittxtstyles"
            android:layout_above="@+id/password2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/password2"
            android:background="@drawable/edittxtstyles"
            android:inputType="textPassword"
            android:hint="Re-enter Password"
            android:textSize="15dp"
            android:longClickable="false"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/password1"
            android:layout_alignStart="@+id/password1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="Last Name"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/lastNameReg"
            android:background="@drawable/edittxtstyles"
            android:layout_above="@+id/emailAddress"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/firstNameReg"
            android:background="@drawable/edittxtstyles"
            android:layout_below="@id/firstname"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Register"
       android:id="@+id/register"
       android:background="@drawable/edittxtstyles"



       android:layout_gravity="center"
       android:focusableInTouchMode="true"
       android:layout_below="@id/linearLayout"
       android:layout_centerHorizontal="true"  />

</RelativeLayout>
